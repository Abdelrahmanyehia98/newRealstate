{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
        "src": "/api/images(.*)",
        "dest": "/server.js"
      },
      {
        "src": "/api/properties(.*)",
        "dest": "/server.js"
      },
      {
        "src": "/api/users(.*)",
        "dest": "/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/server.js"
      }
  ],
  "env": {
    "MONGO_URI": "@your_mongo_uri",
    "PORT": "5000",
    "SECRET_KEY": "@your_secret_key"
  }
}
